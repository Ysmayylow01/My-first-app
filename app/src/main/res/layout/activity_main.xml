<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bacground"
    tools:context=".MainActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/linear"
                android:layout_below="@+id/viewflipper"
                android:layout_marginTop="30dp"
                android:layout_centerInParent="true">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="2dp"
                    android:id="@+id/cdkitap"
                    android:backgroundTint="#FFFFFFFF"
                    app:cardCornerRadius="15dp"
                    android:elevation="8dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:shadowRadius="2"
                        android:shadowColor="#03A9F4"
                        android:fontFamily="@font/aclonia_regular"
                        android:text="@string/kitap"
                        android:textColor="@color/textColor"
                        android:textSize="20dp" />


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="10dp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/cardlogo">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/kitapicon"/>

                    </com.google.android.material.card.MaterialCardView>



                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:cardElevation="2dp"
                    android:id="@+id/cdformul"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="#FFFFFFFF"
                    app:cardCornerRadius="15dp"
                    android:elevation="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonia_regular"
                        android:text="@string/formula"
                        android:textColor="@color/textColor"
                        android:shadowRadius="2"
                        android:shadowColor="#03A9F4"
                        android:textSize="20dp"
                        android:layout_gravity="center"/>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="10dp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/cardlogo">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/formulaicon"/>

                    </com.google.android.material.card.MaterialCardView>



                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:cardElevation="2dp"
                    android:id="@+id/cdsozluk"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="#FFFFFFFF"
                    app:cardCornerRadius="15dp"
                    android:elevation="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonia_regular"
                        android:text="@string/sozluk"
                        android:textColor="@color/textColor"
                        android:textSize="20dp"
                        android:shadowRadius="2"
                        android:shadowColor="#03A9F4"
                        android:layout_gravity="center"/>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="10dp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/cardlogo">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sozlukicon"/>

                    </com.google.android.material.card.MaterialCardView>



                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:cardElevation="2dp"
                    android:id="@+id/cdzehin"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="#FFFFFFFF"
                    app:cardCornerRadius="15dp"
                    android:elevation="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonia_regular"
                        android:text="@string/zehin"
                        android:textColor="@color/textColor"
                        android:textSize="20dp"
                        android:shadowRadius="2"
                        android:shadowColor="#03A9F4"
                        android:layout_gravity="center"/>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="10dp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/cardlogo">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/zehinicon"/>

                    </com.google.android.material.card.MaterialCardView>



                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:cardElevation="2dp"
                    android:id="@+id/cdinfo"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="#FFFFFFFF"
                    app:cardCornerRadius="15dp"
                    android:elevation="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonia_regular"
                        android:text="@string/barada"
                        android:textColor="@color/textColor"
                        android:textSize="20dp"
                        android:shadowRadius="2"
                        android:shadowColor="#03A9F4"
                        android:layout_gravity="center"/>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="10dp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/cardlogo">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/infoicon"/>

                    </com.google.android.material.card.MaterialCardView>



                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


    <ImageView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/linear"
        android:layout_marginTop="10dp"
       android:src="@drawable/oguzlib1"/>

        

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TM"
            android:id="@+id/tvTM"
            android:textSize="20dp"
            android:textColor="#05599C"
            android:layout_below="@id/linear"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EN"
                android:id="@+id/tvEN"
                android:textSize="20dp"
                android:textColor="#05599C"
                android:layout_below="@id/linear"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="90dp"
                android:textStyle="bold"/>

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_line">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="197dp"
            app:layout_constraintBottom_toTopOf="@+id/layout_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/aa" />

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="match_parent"
            android:layout_height="197dp"
            app:layout_constraintBottom_toTopOf="@+id/layout_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/oguz" />

    </ViewFlipper>
        </RelativeLayout>


</ScrollView>
